      <solid android:color="#00008B"/>
      <corners android:radius="4dp" />
    </shape>
  </item>
  <item android:state_focused="true">
    <shape android:shape="rectangle">
      <solid android:color="#00008B"/>
      <corners android:radius="4dp" />
    </shape>
  </item>
  <item>
    <shape android:shape="rectangle">
      <solid android:color="#0000FF"/>
      <corners android:radius="4dp" />
    </shape>
  </item>
</selector>