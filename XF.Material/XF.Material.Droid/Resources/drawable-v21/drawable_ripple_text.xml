<?xml version="1.0" encoding="utf-8" ?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:color="#52000000">
  <item android:id="@android:id/mask">
    <inset android:insetLeft="@dimen/mtrl_btn_inset"
           android:insetTop="@dimen/mtrl_btn_inset"
           android:insetRight="@dimen/mtrl_btn_inset"
           android:insetBottom="@dimen/mtrl_btn_inset">
      <shape android:shape="rectangle">
        <corners android:radius="@dimen/mtrl_btn_corner_radius" />
        <solid android:color="@android:color/white" />
        <padding android:left="@dimen/mtrl_btn_text_padding_left"
                 android:top="@dimen/mtrl_btn_padding_top"
                 android:right="@dimen/mtrl_btn_text_padding_right"
                 android:bottom="@dimen/mtrl_btn_padding_bottom" />
      </shape>
    </inset>
  </item>
  <item android:id="@+id/inset_drawable">
    <inset android:insetLeft="@dimen/mtrl_btn_inset"
           android:insetTop="@dimen/mtrl_btn_inset"
           android:insetRight="@dimen/mtrl_btn_inset"
           android:insetBottom="@dimen/mtrl_btn_inset">
      <selector>
        <item android:state_selected="true">
          <color android:color="@android:color/transparent" />
        </item>

        <item android:state_activated="true">
          <color android:color="@android:color/transparent" />
        </item>

        <item>
          <color android:color="@android:color/transparent" />
        </item>
      </selector>
    </inset>
  </item>
</ripple>