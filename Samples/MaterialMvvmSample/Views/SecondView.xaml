<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MaterialMvvmSample.Views.SecondView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MaterialMvvmSample.Views"
    xmlns:material="clr-namespace:XF.Material.Maui.UI;assembly=XF.Material"
    Title="{Binding JobTitle}"
    material:MaterialNavigationPage.AppBarColor="Black"
    material:MaterialNavigationPage.AppBarTitleTextAlignment="Start"
    material:MaterialNavigationPage.AppBarTitleTextColor="White"
    material:MaterialNavigationPage.AppBarTitleTextFontSize="14"
    material:MaterialNavigationPage.StatusBarColor="Black">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand">
            <material:MaterialLabel HorizontalOptions="Center"
                                    Text="Oops, there's nothing here! :("
                                    TypeScale="Subtitle1"
                                    VerticalOptions="Center" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>