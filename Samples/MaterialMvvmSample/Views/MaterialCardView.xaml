<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:material="clr-namespace:XF.Material.Maui.UI;assembly=XF.Material"
    x:Class="MaterialMvvmSample.Views.MaterialCardView">
    <ContentPage.Content>

        <StackLayout Orientation="Vertical"
                     Margin="16">
             <material:MaterialCard CornerRadius="2" Elevation="3" HeightRequest="80" HorizontalOptions="FillAndExpand" IsClickable="True" IsClippedToBounds="True"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
